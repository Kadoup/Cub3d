{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug cub3d",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/cub3d",
            "args": ["${workspaceFolder}/map/map1.cub"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build",
            "miDebuggerPath": "/usr/bin/gdb",
            "logging": {
                "moduleLoad": false,
                "trace": false
            }
        },
        {
            "name": "Debug cub3d (custom map)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/cub3d",
            "args": ["${input:mapFile}"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build",
            "miDebuggerPath": "/usr/bin/gdb"
        }
    ],
    "inputs": [
        {
            "id": "mapFile",
            "description": "Path to map file",
            "default": "${workspaceFolder}/map/map1.cub",
            "type": "promptString"
        }
    ]
}
